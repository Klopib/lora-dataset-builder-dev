FROM python:3.10-slim

WORKDIR /workspace

# Copy the review UI script into the image
COPY review_ui.py /workspace/review_ui.py

RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir \
        gradio==4.44.1 \
        pillow==9.5.0 \
        huggingface_hub==0.23.4

EXPOSE 7861

CMD ["python", "/workspace/review_ui.py", "--help"]
